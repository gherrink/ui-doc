{
  "name": "styleguide",
  "private": true,
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "scripts": {
    "fix:css": "stylelint 'packages/**/*.css' 'demos/**/*.css' --cache --fix",
    "fix:js": "eslint --cache packages demos shared --ext .js,.ts,.mjs --fix",
    "lint": "pnpm lint:docs && pnpm --no-bail lint:json && pnpm lint:package && pnpm lint:js && pnpm lint:css",
    "lint:css": "stylelint 'packages/**/*.css' 'demos/**/*.css' --cache",
    "lint:docs": "prettier --write **/README.md **/CHANGELOG.md",
    "lint:js": "eslint --cache packages demos shared --ext .js,.ts,.mjs",
    "lint:json": "prettier --write **/tsconfig.json tsconfig.*.json pnpm-workspace.yaml",
    "lint:package": "prettier --write **/package.json",
    "package:build": "pnpm -r --filter='./packages/*' run build",
    "package:release": "versioner --stripShortName='^@.+/' --target",
    "package:release-dry": "versioner --dry --stripShortName='^@.+/' --target",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "release": "pnpm lint && pnpm --filter [HEAD^] test && pnpm --filter [HEAD^] --workspace-concurrency=1 release",
    "release:dry": "pnpm lint && pnpm --filter \"@styleguide/*\" test && pnpm --filter \"@styleguide/*\" --workspace-concurrency=1 release:dry",
    "security": "pnpm audit --audit-level=high"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@dot/versioner": "^0.3.4",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "postcss": "^8.4.38",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.3.0",
    "prettier-plugin-package": "^1.4.0",
    "rollup": "^4.18.0",
    "rollup-plugin-postcss": "^4.0.2",
    "stylelint": "^16.6.1",
    "stylelint-config-clean-order": "^6.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^5.0.0",
    "ts-jest": "^29.1.4",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "**/package.json": [
      "prettier --write"
    ],
    "(demos|shared|\\.)/tsconfig(.*).json": [
      "prettier --write"
    ],
    "(pnpm-workspace|.github/**/*).{yml,yaml}": [
      "prettier --write"
    ],
    "((README|CHANGELOG)|(**/(README|CHANGELOG))).md": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.1.0"
}
